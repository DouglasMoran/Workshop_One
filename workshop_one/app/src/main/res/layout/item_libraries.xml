<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/relativeItems"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="90dp"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewItems"
            android:layout_width="150dp"
            android:layout_height="180dp"
            app:cardBackgroundColor="#F7F2F2"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="120dp"
            >

            <LinearLayout
                android:id="@+id/linearIconItems"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/iconItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/new_york_512"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="50dp"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="115dp"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:id="@+id/countryItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New York"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:textColor="#5D0475"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="135dp"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:id="@+id/numberpicItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6 Photos"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:textColor="#9B92A0"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="42dp"
                android:layout_marginTop="20dp"
                >


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>
